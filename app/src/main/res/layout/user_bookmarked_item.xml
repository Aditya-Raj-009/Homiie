<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardBackgroundColor="@color/expBgBlue"
    app:cardElevation="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/house_image"
            android:src="@drawable/modern_house"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/house_title"
                android:layout_width="match_parent"
                android:textColor="@color/expBlue"
                android:layout_height="wrap_content"
                android:text="Modern Wood House"

                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:paddingEnd="5dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:id="@+id/house_location"
                android:layout_width="match_parent"
                android:drawablePadding="2dp"
                android:fontFamily="@font/montserrat_regular"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:drawableTint="@color/expBlue"
                android:drawableStart="@drawable/placeholder"
                android:text="Canberra,Australia"
                android:textSize="14sp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="3dp">

                <TextView
                    android:id="@+id/house_price_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$3,000"
                    android:fontFamily="@font/montserrat_regular"
                    android:textColor="@color/expBlue"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/house_price_period"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="/Month"
                    android:fontFamily="@font/montserrat_regular"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/house_bedrooms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:textStyle="bold"
                    android:fontFamily="@font/montserrat_regular"
                    android:textColor="@color/black"
                    android:drawableTint="@color/expBlue"
                    android:drawableStart="@drawable/ic_bedroom"
                    android:drawablePadding="5dp"/>

                <TextView
                    android:id="@+id/house_bathrooms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_bathroom"
                    android:drawablePadding="5dp"
                    android:text="4"
                    android:textStyle="bold"
                    android:fontFamily="@font/montserrat_regular"
                    android:textColor="@color/black"
                    android:drawableTint="@color/expBlue"
                    android:layout_marginStart="16dp"/>

                <TextView
                    android:id="@+id/house_area"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1500 sq.ft."
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:drawableTint="@color/expBlue"
                    android:fontFamily="@font/montserrat_regular"
                    android:drawableStart="@drawable/ic_area"
                    android:drawablePadding="5dp"
                    android:layout_marginStart="16dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>