<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="left"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:paddingRight="10dp"
    android:paddingTop="5dp" >

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textColor="#777777"
        android:textSize="12sp"
        android:fontFamily="@font/montserrat_regular"
        android:textStyle="italic" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:gravity="left"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="10dp"
        android:id="@+id/reply_layout"
        android:backgroundTint="@color/replyBackground"
        android:padding="2dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:padding="2dp"
            android:id="@+id/repliedName"
            android:textStyle="bold|italic"
            android:textSize="12sp"
            android:layout_marginBottom="3dp"
            android:background="@color/Gray"
            android:textColor="@color/black" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_regular"
            android:textColor="@color/black"
            android:maxLines="2"
            android:textSize="12sp"
            android:maxWidth="350dp"
            android:id="@+id/repliedMessg"
            />
    </LinearLayout>
    <RelativeLayout
        android:orientation="horizontal"
        android:id="@+id/mLinear"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/receiver_txtMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_msg_from"
            android:paddingBottom="5dp"
            android:fontFamily="@font/montserrat_regular"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:textColor="#ff717171"
            android:textSize="16sp"

            android:layout_toRightOf="@+id/textView27"
            android:layout_marginRight="50dp" />

        <TextView
            android:id="@+id/textView27"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/triangle_msg_from"
            android:paddingRight="10dp"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:paddingLeft="10dp"
            android:paddingTop="2dp"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="3dp" />

    </RelativeLayout>
    <ImageView
        android:layout_width="200dp"
        android:layout_height="130dp"
        android:visibility="gone"
        android:src="@drawable/image_placeholder"
        android:layout_margin="5dp"
        android:scaleType="centerCrop"
        android:id="@+id/image"/>
</LinearLayout>