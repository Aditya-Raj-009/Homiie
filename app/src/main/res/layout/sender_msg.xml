<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="right"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:paddingRight="10dp"
    android:paddingTop="5dp" >


    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:fontFamily="@font/montserrat_regular"
        android:textColor="#777777"
        android:textSize="12sp"
        android:textStyle="italic" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_marginStart="50dp"
        android:id="@+id/reply_layout"
        android:elevation="8dp"
        android:backgroundTint="@color/replyBackground"
        android:padding="2dp"
        android:layout_marginBottom="2dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:padding="2dp"
            android:id="@+id/repliedName"
            android:textStyle="bold|italic"
            android:textSize="12sp"
            android:layout_marginBottom="3dp"
            android:background="@color/Gray"
            android:textColor="@color/black" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_regular"
            android:maxLines="2"
            android:textSize="12sp"
            android:maxWidth="350dp"
            android:id="@+id/repliedMessg"
            android:textColor="@color/black"
            />
    </LinearLayout>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:id="@+id/mLinear"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/sender_textMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_msg_you"
            android:backgroundTint="@color/expBlue"
            android:paddingBottom="5dp"
            android:fontFamily="@font/montserrat_regular"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_toLeftOf="@+id/textView27"
            android:layout_marginLeft="50dp" />
        <TextView
            android:id="@+id/textView27"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/triangle_msg_you"
            android:paddingRight="10dp"
            android:backgroundTint="@color/expBlue"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:paddingLeft="10dp"
            android:paddingTop="2dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="3dp" />

    </RelativeLayout>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="130dp"
        android:visibility="gone"
        android:src="@drawable/image_placeholder"
        android:layout_margin="5dp"
        android:scaleType="centerCrop"
        android:id="@+id/image"/>
</LinearLayout>